<h2>商品編集</h2>
<br>
<%= form_with model: @item, url: admins_item_path, local: true do |f| %>
  <table class="new-form-table">
    <div class="col-xs-8">
    <tbody>
      <tr>
        <th>商品画像</th>
        <td>
          <div class="item-new-form">
            <%= f.attachment_field :image %>
          </div>
        </td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name, class: "form-control" %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :introduction, class: "form-control" %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
      </tr>
      <tr>
        <th>税抜価格</th>
        <td><%= f.text_field :price_without_tax, class: "form-control" %></td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中"  %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中" %>
        </td>
      </tr>
    </tbody>
    </div>
  </table>
  <div class="text-right"><%= f.submit "変更を保存" ,class: "btn btn-success " %></div>
  <% end %>
