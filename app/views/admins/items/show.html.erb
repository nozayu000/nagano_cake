<div class="container-fluid">
  <div class="row">
    <div class="col-xs-4">
      <h2>商品詳細</h2><br>
      <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: 'no_image.jpg' %>
      <br>
      <div class="col-xs-8">
        <table class="table">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>
                税込価格</br>
              （税抜価格）
              </td>
              <td><%= (@item.price_without_tax*1.1).floor.to_s(:delimited, delimiter: ',') %>（<%= (@item.price_without_tax).floor.to_s(:delimited, delimiter: ',') %>）円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <div class="item_show_status">
                  <% if @item.is_active == true %>
                    <div class="status_true">販売中</div>
                  <% else %>
                    <div class="status_falese">販売停止中</div>
                  <% end %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="col-md-offset-1 col-md-2 text-right">
          <%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-success" %>
        </div>
      </div>
  </div>
</div>