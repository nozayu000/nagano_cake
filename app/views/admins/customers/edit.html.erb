<div class="row">
  <div class="col-xs-4">
      <h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2><br>
  </div>
  <br><br><br><br>
      <div class="col-xs-8">
        <table class="table">
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
             <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name, class: "form-control" %>
                  <%= f.text_field :first_name, class: "form-control" %>
              </td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana, class: "form-control" %>
                  <%= f.text_field :first_name_kana, class: "form-control" %>
              </td>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code, class: "form-control" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number, class: "form-control" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
              <%= f.label :is_deletedr_status, '有効', value: 1 %>
              <%= f.radio_button :receive_news, '1' %>
              
              <%= f.label :is_deletedr_status, '退会', value: 0 %>
              <%= f.radio_button :receive_news, '0' %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="col-md-offset-1 col-
          md-2 text-right">
          <%= link_to "変更を保存する", admins_customer_path(@customer), class: "btn btn-success" %>
      </div>
    </div>