<div class="pull-right">
	<%= search_form_for(@search, url:admins_customers_path) do |f| %>
		<%= f.label :last_name_or_first_name, "会員キーワード" %>
		<%= f.search_field :last_name_or_first_name_cont %>
		<%= f.submit %>
	<% end %>
</div>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
      <h2>会員一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |custumer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name + "　"  + customer.first_name,admins_customer_path(customer) %></td>
              <td><%= custumer.email %></td>
              <td><% if customer.is_deleted == false %>
                  <div class="deleted_false">有効</div>
                  <% else %>
                  <div class="deleted_true">退会</div>
                  <% end %>
              </td>
            </tr>
            <% end %>
            <%= paginate @customers %>
        </tbody>
      </table>
    </div>
  </div>