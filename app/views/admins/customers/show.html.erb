<h2><%= @customer.last_name + "　"  + @customer.first_name %>さんの会員詳細</h2>
<br><br>
<table class="table">
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name + "　"  + @customer.first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.last_name_kana + "　"  + @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
      <% if @customer.is_deleted == false %>
        有効
      <% else %>
        退会
      <% end %>
      </td>
    </tr>
  </tbody>
</table>
<%= link_to "編集する", edit_admins_customer_path(@customer), class: "btn btn-primary" %>
<%= link_to "注文履歴一覧へ" , admins_orders_path(@customer.id), class:"btn btn-success" %>