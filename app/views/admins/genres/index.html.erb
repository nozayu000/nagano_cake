<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h2>ジャンル一覧・追加画面</h2><br>
    <div class="form-group col-md-10">
    <%= form_for(@genre, url: admins_genres_path) do |f| %>
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name,class: "col-md-4" %>
          <%= f.submit "新規登録" ,class: "btn btn-primary" %>
    <% end %>
    </div>
  <br>
    <table class="table genre-index">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-primary" %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>