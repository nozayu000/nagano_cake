<div class="container">
    <div class="row">
        <!-- ジャンルのサイドバーを表示 -->
        <div class="col-xs-2">
            <%= render "customers/items/sidebar", genres: @genres %>
        </div>

        <div class="col-xs-9 ">
            <h3 style="font-family: HiraMinPro-W6; color: #000000; margin: 20px 0;">ようこそ、NaganoCakeへ！</h3>
            <h5>
            このサイトは、ケーキ販売のECサイトになります。</br>
            会員でない方も商品の閲覧はできますが、</br>
            購入には会員登録が必要になります。</br>
            </h5>
        </div>

        <h3 class="recommended-items" style="font-family: HiraMinPro-W6; color: #000000;">新着商品</h3>
        <div class="row d-flex"></div>
        <!-- 商品を4つ表示するようにする -->
        <div class="col-xs-9 col-xs-offset-1">
            <div class="item-card-content">
                <% @items.last(4).each do |item| %>
                    <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px;">
                        <%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
                            <%= attachment_image_tag item, :image, :fill, 180, 125, format: 'jpeg',fallback: "no_image.jpg" %><br>
                            <%= item.name %><br>
                            ¥<%= item.price_without_tax.to_s(:delimited, delimiter: ',') %>
                        <% end %>
                    </div>
                <% end %>
            <div>
        </div>
        </div>
        <table class="" >
            <%= link_to "全ての商品を見る>", items_path, class:"", style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %>
        </table>
        </div>
    </div>
</div>